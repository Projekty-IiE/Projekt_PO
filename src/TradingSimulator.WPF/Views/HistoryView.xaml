<UserControl x:Class="TradingSimulator.WPF.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Transaction History"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Transactions}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  Background="White"
                  BorderBrush="#DDDDDD"
                  BorderThickness="1">

            <DataGrid.Columns>

                <DataGridTextColumn Header="Type"
                                    Binding="{Binding Type}"
                                    Width="60"/>
                <DataGridTextColumn Header="Symbol"
                                    Binding="{Binding StockSymbol}"
                                    Width="70"
                                    FontWeight="Bold"/>

                <DataGridTextColumn Header="Quantity"
                                    Binding="{Binding Quantity}"
                                    Width="70"/>

                <DataGridTextColumn Header="Price"
                                    Binding="{Binding PricePerShare, StringFormat=C2}"
                                    Width="90"/>

                <DataGridTextColumn Header="Realized PnL"
                                    Binding="{Binding RealizedPnL, StringFormat=C2, TargetNullValue='-'}"
                                    Width="100"
                                    FontWeight="Bold"/>

                <DataGridTextColumn Header="Time"
                                    Binding="{Binding Time, StringFormat='HH:mm:ss'}" 
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>