<Window x:Class="TradingSimulator.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:TradingSimulator.WPF.Views"
        xmlns:converters="clr-namespace:TradingSimulator.WPF.Converters"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"

        mc:Ignorable="d"
        Title="Mini Trading Simulator" 
        Height="800" Width="1200"
        WindowState="Maximized"
        Background="#181818">
    
    <Window.Resources>
        <converters:MessageToColorConverter x:Key="MessageColorConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="280" />
        </Grid.ColumnDefinitions>


        <Grid Grid.Row="0" Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="500"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- CHART -->
            <lvc:CartesianChart Grid.Row="0"
                        Series="{Binding PriceSeries}"
                        LegendLocation="None"
                        Margin="10"
                        DisableAnimations="True"
                        AnimationsSpeed="0:0:0.1"
                        Background="Transparent">

                <!-- X AXIS -->
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis
                Title="Time (ticks)"
                Labels="{Binding Labels}"
                Foreground="#9E9E9E"
                FontSize="12"/>
                </lvc:CartesianChart.AxisX>

                <!-- Y AXIS -->
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis
                Title="Price [$]"
                Foreground="#9E9E9E"
                FontSize="12"/>
                </lvc:CartesianChart.AxisY>

            </lvc:CartesianChart>

            <!-- PORTFOLIO -->
            <views:PortfolioView Grid.Row="1"
                          Margin="10"/>

        </Grid>

        <Border Grid.Row="0" Grid.Column="1" 
                Background="#202020" 
                BorderBrush="#333333" 
                BorderThickness="1,0,0,0" 
                Padding="20">

            <StackPanel>
                <TextBlock Text="Trading Console" 
                           FontSize="20" FontWeight="Bold" Foreground="AliceBlue" 
                           Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="Stock Symbol:" FontWeight="SemiBold" Margin="0,5,0,0" Foreground="AliceBlue"/>

                <ComboBox ItemsSource="{Binding AvailableStocks}"
                          DisplayMemberPath="Symbol"
                          SelectedValuePath="Symbol"
                          SelectedValue="{Binding SymbolInput, UpdateSourceTrigger=PropertyChanged}"
                          Padding="8" Margin="0,5,0,15" FontSize="14"
                          IsEditable="False"
                          SelectedIndex="0"/>

                <TextBlock Text="Quantity:" FontWeight="SemiBold" Foreground="AliceBlue"/>
                <TextBox Text="{Binding QuantityInput, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="8" Margin="0,5,0,20" FontSize="14"/>

                <UniformGrid Columns="2" Margin="0,0,0,10">
                    <Button Content="BUY" Command="{Binding BuyStockCommand}" 
                            Height="45" Margin="0,0,5,0"
                            Background="#2E8B57" Foreground="White" FontWeight="Bold" Cursor="Hand"/>

                    <Button Content="SELL" Command="{Binding SellStockCommand}" 
                            Height="45" Margin="5,0,0,0"
                            Background="#D32F2F" Foreground="White" FontWeight="Bold" Cursor="Hand"/>
                </UniformGrid>


                <StackPanel Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Total Realized PnL: " FontWeight="SemiBold" Foreground="AliceBlue"/>
                        <TextBlock Text="{Binding TotalRealizedPnL, StringFormat=C2}" FontWeight="Bold" Foreground="AliceBlue"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                        <TextBlock Text="Total Unrealized PnL: " FontWeight="SemiBold"
                                   Foreground="AliceBlue"/>
                        <TextBlock Text="{Binding TotalUnrealizedPnL, StringFormat=C2}" FontWeight="Bold" Foreground="AliceBlue"/>
                    </StackPanel>
                </StackPanel>
                <Separator Margin="0,20,0,20"/>


                <TextBlock Text="Market Simulation" 
                           FontSize="16" FontWeight="Bold" Foreground="AliceBlue" 
                           Margin="0,0,0,15" HorizontalAlignment="Center"/>

                <StackPanel>
                    <Button Content="NEXT TICK" 
                            Command="{Binding NextTickCommand}"
                            Height="40" Margin="0,0,0,10"
                            Background="#2196F3" Foreground="White" FontWeight="Bold" Cursor="Hand"/>

                    <Button Content="{Binding AutoTickButtonText}" 
                            Command="{Binding ToggleAutoTickCommand}"
                            Height="40"
                            Background="#FF9800" Foreground="White" FontWeight="Bold" Cursor="Hand"/>

                    <TextBlock Text="Auto-Tick updates prices every 1 sec." 
                               FontSize="10" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap"/>

                    <Separator Margin="0,20,0,20"/>

                    <Button Content="TRANSACTION HISTORY"
                        Command="{Binding OpenTransactionHistoryCommand}"
                        Height="40"
                        Margin="0,10,0,0"
                        Background="#555"
                        Foreground="White"
                        FontWeight="Bold"/>
                    <Separator Margin="0,20,0,20"/>

                    <TextBlock Text="Session Options" 
                               FontSize="16" FontWeight="Bold" Foreground="AliceBlue" 
                               Margin="0,0,0,15" HorizontalAlignment="Center"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                                Content="💾 SAVE" 
                                Command="{Binding SaveSessionCommand}" 
                                Height="40"
                                Margin="0,0,5,0"
                                Background="#2ecc71" 
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand"/>

                        <Button Grid.Column="1" 
                                Content="📂 LOAD" 
                                Command="{Binding LoadSessionCommand}" 
                                Height="40"
                                Margin="5,0,0,0"
                                Background="#3498db" 
                                Foreground="White" 
                                FontWeight="Bold"
                                Cursor="Hand"/>
                    </Grid>

                </StackPanel>
            </StackPanel>
        </Border>


        <StatusBar Grid.Row="1" Grid.ColumnSpan="2" Background="#555" Padding="5">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <StatusBarItem Grid.Column="0">
                <TextBlock Text="{Binding StatusMessage}" FontWeight="Bold" Foreground="AliceBlue"/>
            </StatusBarItem>

            <StatusBarItem Grid.Column="1" Margin="0,0,20,0">
                <TextBlock Text="{Binding TransactionMessage}" FontWeight="Bold">
                    <TextBlock.Foreground>
                        <Binding Path="TransactionMessage" Converter="{StaticResource MessageColorConverter}"/>
                    </TextBlock.Foreground>
                </TextBlock>
            </StatusBarItem>

            <StatusBarItem Grid.Column="2" Margin="0,0,10,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Cash Balance: " 
                       Foreground="LightGray" 
                       VerticalAlignment="Center"/>

                    <TextBlock Text="{Binding Balance, StringFormat='{}{0:C}'}" 
                       FontWeight="Bold" 
                       Foreground="AliceBlue" 
                       VerticalAlignment="Center"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>