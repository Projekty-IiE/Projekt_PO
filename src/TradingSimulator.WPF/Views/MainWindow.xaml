<Window x:Class="TradingSimulator.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:TradingSimulator.WPF.Views"
        
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="550" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="280" />
        </Grid.ColumnDefinitions>


        <views:PortfolioView Grid.Row="0" Grid.Column="0" />


        <Border Grid.Row="0" Grid.Column="1" 
                Background="#F5F5F5" 
                BorderBrush="#DDDDDD" 
                BorderThickness="1,0,0,0" 
                Padding="20">

            <StackPanel>
                <TextBlock Text="Trading Console" 
                           FontSize="20" FontWeight="Bold" Foreground="#333" 
                           Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="Stock Symbol:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                <TextBox Text="{Binding SymbolToBuy, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="8" Margin="0,5,0,15" CharacterCasing="Upper" FontSize="14"/>

                <TextBlock Text="Quantity:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding QuantityToBuy, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="8" Margin="0,5,0,20" FontSize="14"/>

                <UniformGrid Columns="2" Margin="0,0,0,10">
                    <Button Content="BUY" Command="{Binding BuyStockCommand}" 
                            Height="45" Margin="0,0,5,0"
                            Background="#2E8B57" Foreground="White" FontWeight="Bold" Cursor="Hand"/>

                    <Button Content="SELL" Command="{Binding SellStockCommand}" 
                            Height="45" Margin="5,0,0,0"
                            Background="#D32F2F" Foreground="White" FontWeight="Bold" Cursor="Hand"/>
                </UniformGrid>

                <TextBlock Text="Available: AAPL, TSLA, MSFT, GOOGL" 
                           FontSize="11" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,30"/>


                <Separator Margin="0,10,0,20"/>


                <TextBlock Text="Market Simulation" 
                           FontSize="16" FontWeight="Bold" Foreground="#555" 
                           Margin="0,0,0,15" HorizontalAlignment="Center"/>

                <StackPanel>
                    <Button Content="NEXT TICK (+1 Day)" 
                            Command="{Binding NextTickCommand}"
                            Height="40" Margin="0,0,0,10"
                            Background="#2196F3" Foreground="White" FontWeight="Bold" Cursor="Hand"/>

                    <Button Content="{Binding AutoTickButtonText}" 
                            Command="{Binding ToggleAutoTickCommand}"
                            Height="40"
                            Background="#FF9800" Foreground="White" FontWeight="Bold" Cursor="Hand"/>

                    <TextBlock Text="Auto-Tick updates prices every 1 sec." 
                               FontSize="10" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap"/>
                </StackPanel>

            </StackPanel>
        </Border>


        <StatusBar Grid.Row="1" Grid.ColumnSpan="2" Background="#EEEEEE" Padding="8">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" FontWeight="Bold" Foreground="#333"/>
            </StatusBarItem>

            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Cash: " FontSize="14"/>
                    <TextBlock Text="{Binding Balance, StringFormat=C2}" FontWeight="Bold" Foreground="Green" FontSize="14"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>